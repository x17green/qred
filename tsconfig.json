{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/screens/*": ["./components/screens/*"],
      "@/lib/*": ["./lib/*"],
      "@/assets/*": ["./assets/*"],
      "@/store/*": ["./lib/store/*"],
      "@/services/*": ["./lib/services/*"],
      "@/types": ["./lib/types/index.ts"],
      "@/constants": ["./lib/constants/index.ts"],
      "@/hooks/*": ["./lib/hooks/*"],
      "@/utils/*": ["./lib/utils/*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  }
}
